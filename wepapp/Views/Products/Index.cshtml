<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>پنل مدیریت محصولات</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Vazirmatn Font -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet" type="text/css" />

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Vazirmatn', 'sans-serif'],
                    },
                    colors: {
                        primary: '#4f46e5', // Indigo 600
                        secondary: '#64748b', // Slate 500
                    }
                }
            }
        }
    </script>

    <style>
        body { background-color: #f8fafc; } /* Slate 50 */
    </style>
</head>

<body class="text-slate-800 antialiased min-h-screen p-6">

    <div class="max-w-5xl mx-auto">

        <!-- Header ساده و تمیز -->
        <div class="border-b border-slate-200 pb-5 mb-8 flex justify-between items-end">
            <div>
                <h1 class="text-2xl font-bold text-slate-900">محصولات</h1>
                <p class="text-sm text-slate-500 mt-1">مدیریت موجودی و قیمت‌ها</p>
            </div>
            <!-- دکمه رفرش برای تست -->
            <button onclick="loadProducts()" class="text-sm text-primary hover:underline">
                بروزرسانی لیست ⟳
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-8">
            
            <!-- ستون فرم (سایدبار) -->
            <div class="md:col-span-4">
                <div class="bg-white p-6 rounded-xl border border-slate-200 sticky top-6">
                    <h2 class="font-bold text-lg mb-4 text-slate-800">ثبت محصول جدید</h2>

                    <form id="productForm" class="space-y-4">
                        <!-- Title -->
                        <div>
                            <label class="block text-xs font-semibold text-slate-500 mb-1.5">نام محصول</label>
                            <input id="title" type="text" placeholder="مثلا: آیفون 13"
                                class="w-full px-3 py-2.5 rounded-lg bg-slate-50 border border-slate-200 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition text-sm" />
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-xs font-semibold text-slate-500 mb-1.5">توضیحات</label>
                            <textarea id="description" rows="3" placeholder="توضیحات کوتاه..."
                                class="w-full px-3 py-2.5 rounded-lg bg-slate-50 border border-slate-200 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition text-sm resize-none"></textarea>
                        </div>

                        <!-- Price -->
                        <div>
                            <label class="block text-xs font-semibold text-slate-500 mb-1.5">قیمت (تومان/دلار)</label>
                            <input id="price" type="number" placeholder="0"
                                class="w-full px-3 py-2.5 rounded-lg bg-slate-50 border border-slate-200 focus:border-primary focus:ring-1 focus:ring-primary outline-none transition text-sm dir-ltr text-left" />
                        </div>

                        <button type="submit" id="addBtn"
                            class="w-full bg-primary hover:bg-indigo-700 text-white font-medium py-2.5 rounded-lg transition shadow-sm active:translate-y-0.5 text-sm">
                            افزودن به لیست
                        </button>
                    </form>
                </div>
            </div>

            <!-- ستون لیست محصولات -->
            <div class="md:col-span-8">
                <div id="productsList" class="grid grid-cols-1 gap-3">
                    <!-- آیتم‌ها اینجا لود می‌شوند -->
                    <div class="text-center text-slate-400 py-10 text-sm animate-pulse">
                        در حال دریافت اطلاعات...
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // استفاده از آدرس نسبی برای اینکه هم روی لوکال کار کنه هم روی Render
        // اگر خطا داد، اینو برگردون به http://localhost:5175/api/products
        const apiUrl = "/api/products"; 

        async function loadProducts() {
            const list = document.getElementById("productsList");
            try {
                const res = await fetch(apiUrl);
                if (!res.ok) throw new Error("خطا در شبکه");
                
                const products = await res.json();
                list.innerHTML = "";

                if(products.length === 0) {
                    list.innerHTML = `
                        <div class="text-center bg-white border border-dashed border-slate-300 rounded-xl py-12">
                            <p class="text-slate-500 text-sm">لیست خالی است!</p>
                        </div>`;
                    return;
                }

                products.forEach(p => {
                    // فرمت قیمت (جداکننده هزارگان)
                    const formattedPrice = new Intl.NumberFormat().format(p.price);

                    const item = `
                    <div class="group bg-white p-4 rounded-xl border border-slate-200 flex justify-between items-center hover:border-primary/30 transition-colors">
                        <div>
                            <h3 class="font-bold text-slate-800 text-base">${p.title}</h3>
                            ${p.description ? `<p class="text-xs text-slate-500 mt-1 truncate max-w-xs">${p.description}</p>` : ''}
                        </div>
                        <div class="text-left pl-2">
                            <span class="block font-mono font-bold text-slate-700 text-lg tracking-tight">${formattedPrice}</span>
                            <span class="text-[10px] text-slate-400 uppercase tracking-wider">Price</span>
                        </div>
                    </div>
                    `;
                    list.innerHTML += item;
                });
            } catch (error) {
                console.error(error);
                list.innerHTML = `
                    <div class="text-center text-red-500 text-sm py-4 bg-red-50 rounded-lg border border-red-100">
                        خطا در دریافت اطلاعات. آیا سرور روشن است؟
                    </div>`;
            }
        }

        document.getElementById("addBtn").addEventListener("click", async (e) => {
            e.preventDefault();
            
            const titleVal = document.getElementById("title").value;
            const priceVal = document.getElementById("price").value;

            if(!titleVal || !priceVal) {
                Swal.fire({ icon: 'warning', text: 'لطفا نام و قیمت را وارد کنید', confirmButtonText: 'باشه', confirmButtonColor: '#4f46e5' });
                return;
            }

            const body = {
                title: titleVal,
                description: document.getElementById("description").value,
                price: parseFloat(priceVal)
            };

            try {
                const res = await fetch(apiUrl, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body)
                });

                if (res.ok) {
                    document.getElementById("productForm").reset();
                    
                    const Toast = Swal.mixin({
                        toast: true,
                        position: 'bottom-start',
                        showConfirmButton: false,
                        timer: 3000,
                        timerProgressBar: true
                    });
                    Toast.fire({ icon: 'success', title: 'محصول اضافه شد' });
                    
                    loadProducts();
                } else {
                    throw new Error("خطای سرور");
                }
            } catch (error) {
                Swal.fire({ icon: 'error', title: 'خطا', text: 'مشکلی پیش آمد' });
            }
        });

        // اجرای اولیه
        loadProducts();
    </script>
</body>
</html>
